# editorconfig.org
root = true

[*]
indent_style = tab
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.yml]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.sass]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.coffee]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.coffee.erb]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2
